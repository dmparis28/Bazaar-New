{
  "name": "bazaar-monorepo",
  "private": true,
  "description": "Bazaar Marketplace Monorepo (SAQ D Edition)",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:user-service": "pnpm --filter user-service dev",
    "dev:product-service": "pnpm --filter product-service dev",
    "dev:payment-service": "pnpm --filter payment-service dev",
    "dev:shared-types": "pnpm --filter shared-types dev",
    "build": "pnpm --filter \"./**\" build",
    "build:services": "pnpm --filter \"./apps/services/**\" build",
    "build:packages": "pnpm --filter \"./packages/**\" build"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.12"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

